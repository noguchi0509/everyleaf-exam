<h1>タスク一覧</h1>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>ラベル</th>
    <th>ステータス</th>
    <th>優先順位</th>
  </tr>


  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.label %></td>
      <td><%= task.status %></td>
      <td><%= task.priority %></td>
      <td><%= link_to('詳細', task_path(task.id)) %></td>
      <td><%= link_to('編集', edit_task_path(task.id)) %></td>
      <td><%= link_to('削除', task_path(task.id), method: :delete, data: {confirm: "本当に削除してもいいですか？"}) %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to('タスクを登録する', new_task_path) %></p>
