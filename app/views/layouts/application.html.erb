<!DOCTYPE html>
<html>
  <head>
    <title>EveryleafExam</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to("HOME", root_path, class: "nav-link", class: "navbar-brand"  ) %>
            </li>
            <% if logged_in? %>
              <li class="nav-item active">
                  <%= link_to(t("index_page.confirm_register"), new_task_path, class: "nav-link" ) %>
              </li>
              <li class="nav-item active">
                  <%= link_to(t("index_page.logout"), session_path(id: session[:user_id]),method: :delete, class: "nav-link" ) %>
              </li>
              <li class="nav-item active">
                <%= link_to(t("index_page.profile"), user_path(id: session[:user_id]), class: "nav-link" ) %>
              </li>
            <% else %>
              <li class="nav-item active">
                <%= link_to(t("index_page.login"), new_session_path, class: "nav-link" ) %></li>
              <li class="nav-item active">
                <%= link_to(t("index_page.signup"), new_user_path,class: "nav-link" ) %>
              </li>
            <% end %>
            <% if logged_in? %>
              <% if current_user.admin? %>
                <li class="nav-item active">
                  <%= link_to("ユーザー一覧", admin_users_path, class: "nav-link" ) %>
                </li>
                <li class="nav-item active">
                  <%= link_to("ユーザー登録", new_admin_user_path, class: "nav-link" ) %>
                </li>
                <li class="nav-item active">
                  <%= link_to("ラベル一覧", admin_labels_path, class: "nav-link" ) %>
                </li>
              <% end %>
            <% end %>
        </div>
      </nav>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "alert alert-#{key}") %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
