<h1><%= t("index_page.top_h1") %></h1>

<table class="table table-bordered">
  <tr>
    <th scope="col"><%= User.human_attribute_name :name %> </th>
    <th scope="col"><%= User.human_attribute_name :email %> </th>
    <th scope="col"><%= User.human_attribute_name :admin %></th>
    <th scope="col"><%= User.human_attribute_name :count %></th>
    <th colspan="3"><%= t("menu.command") %></th>
  </tr>

  <% @users.each do |user| %>
      <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.admin? %></td>
      <td><%= user.tasks.count %></td>
      <td><%= link_to(t("menu.show"),admin_user_path(user.id)) %></td>
      <td><%= link_to(t("menu.edit"), edit_admin_user_path(user.id)) %></td>
      <td><%= link_to(t("menu.delete"), admin_user_path(user.id), method: :delete, data: {confirm: t("notice.confirm_delete")}) %></td>
    </tr>
  <% end %>
</table>
<div class="row">
  <div class="col-sm"><%= link_to("ユーザー登録", new_admin_user_path, class: "btn btn-outline-primary") %></div>
</div>
<%= paginate @users %>
